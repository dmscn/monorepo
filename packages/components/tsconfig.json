{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.test.**",
    "**/*.spec.**",
    "**/*.stories.**"
  ],
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ]
}
